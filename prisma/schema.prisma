datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String  @id
  balance Int     @default(0)
  tickets Int     @default(0)
  isAdmin Boolean @default(false)
}

model Todo {
  id   Int    @id @default(autoincrement())
  text String
}
